# WhatsApp Bot Configuration
# Copy this file to .env and fill in your values

# ============ BOT CONFIGURATION ============
BOT_PREFIX=!
BOT_PORT=3001

# Admin phone number (for owner-only commands)
# Format: 263771234567 (without + or 00)
ADMIN_PHONE=263771234567

# ============ API CONFIGURATION ============
API_BASE_URL=http://localhost:5173
API_TIMEOUT=5000

# ============ DATABASE ============
# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-api-key
SUPABASE_SERVICE_KEY=your-service-key

# Or PostgreSQL Direct
DATABASE_URL=postgresql://user:password@localhost:5432/smartbot

# ============ LOGGING ============
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# ============ FEATURES ============
# Enable/disable features
ENABLE_BROADCAST=true
ENABLE_TEMPLATES=true
ENABLE_IMAGE_UPLOAD=true
ENABLE_MEDIA_DOWNLOAD=true

# ============ SECURITY ============
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Command limits
DAILY_COMMAND_LIMIT=1000
HOURLY_COMMAND_LIMIT=100

# ============ CACHE CONFIGURATION ============
# Cache TTLs in seconds
CACHE_SESSION_TTL=3600
CACHE_CART_TTL=7200
CACHE_MERCHANT_TTL=1800
CACHE_PRODUCT_TTL=900

# ============ NOTIFICATION ============
# Webhook for important events
WEBHOOK_URL=http://localhost:5000/webhooks/bot

# ============ PAYMENT GATEWAY ============
# If implementing payments
PAYMENT_PROVIDER=paystack
PAYSTACK_PUBLIC_KEY=pk_test_xxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxx

# ============ SMTP FOR EMAIL NOTIFICATIONS ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@smartbot.com

# ============ STORAGE ============
# For media files
STORAGE_PATH=./media
BACKUP_PATH=./backups

# ============ DEVELOPMENT ============
NODE_ENV=development
DEBUG=false

# ============ TIMEZONE ============
TZ=Africa/Harare
