# ============================================================
# Smart WhatsApp Bot Platform - Local Development Configuration
# ============================================================
# Copy this file to .env.local and fill in your values

# ============================================================
# DEPLOYMENT MODE
# ============================================================
# Use 'local' for Docker Compose or 'cloud' for Supabase Cloud
DEPLOYMENT_MODE=local

# ============================================================
# DATABASE - LOCAL (Docker PostgreSQL)
# ============================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=smart_whatsapp
DB_URL=postgresql://postgres:postgres@postgres:5432/smart_whatsapp

# ============================================================
# DATABASE - CLOUD (Supabase)
# ============================================================
# Use these if DEPLOYMENT_MODE=cloud
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ============================================================
# CACHE - Redis
# ============================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================
# BOT CONFIGURATION
# ============================================================
BOT_PREFIX=!
BOT_API_PORT=4001
BOT_NAME=Smart WhatsApp Bot
ADMIN_PHONE=+263781564004

# ============================================================
# API CONFIGURATION
# ============================================================
API_BASE_URL=http://localhost:5173
API_SERVER_URL=http://localhost:4001

# ============================================================
# WHATSAPP BOT SETTINGS
# ============================================================
# Auto-accept chats
AUTO_ACCEPT_CHATS=true

# Session idle timeout (milliseconds)
SESSION_TIMEOUT=86400000

# Cart expiry (milliseconds)
CART_EXPIRY=7200000

# Message rate limit (ms between messages)
MESSAGE_RATE_LIMIT=500

# Enable group command support
ENABLE_GROUP_COMMANDS=true

# ============================================================
# PAYMENT GATEWAY (Optional)
# ============================================================
PAYMENT_GATEWAY=local
PAYMENT_API_KEY=test-key
PAYMENT_API_SECRET=test-secret

# ============================================================
# NOTIFICATIONS
# ============================================================
ENABLE_ORDER_NOTIFICATIONS=true
NOTIFY_MERCHANT_ON_ORDER=true
NOTIFY_CUSTOMER_ON_UPDATE=true

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# ============================================================
# SECURITY
# ============================================================
JWT_SECRET=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# ============================================================
# FEATURES
# ============================================================
ENABLE_ANALYTICS=true
ENABLE_TESTIMONIALS=true
ENABLE_REFERRALS=false
ENABLE_LOYALTY_POINTS=false

# ============================================================
# REGION & LOCALIZATION
# ============================================================
DEFAULT_REGION=ZW
DEFAULT_CURRENCY=USD
SUPPORTED_REGIONS=ZW,ZA
SUPPORTED_CURRENCIES=USD,ZWL,ZAR
